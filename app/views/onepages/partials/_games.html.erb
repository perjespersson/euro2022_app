<div style="background-color: white; border-radius: 20px;">
  <% @games.each do |game| %>
    <div class="d-flex" style="width: 100%; border-top: 1px solid rgba(204, 204, 204, 0.25); padding-top: 15px;";>
      <div class="align-self-center" style="margin: 0 auto;";>
        <p style="margin: 0; padding: 5px 8px; display: block; background-color: #f5f5f5; color: #787878; border-radius: 10px; font-size: 11px;">Omg√•ng <%= game.round %></p>
      </div>
    </div>

    <div class="d-flex" style="height: 90px; padding-bottom: 15px;">
      <div class="align-self-center" style="width: calc(50% - 120px); text-align: right;">
        <p style="margin: 0; padding: 0;"><%= game.home_team.name %></p>
      </div>

      <div class="align-self-center" style="width: 90px">
        <%= image_tag(game.home_team.image_badge_url, style: 'width: 40px; display:block; margin: 0 auto;')  %>
      </div>

      <div class="align-self-center" style="width: 60px; text-align: center;">
        <% if game.home_team_score.present? && game.away_team_score.present? %>
          <p style="margin: 0; padding: 0; font-size: 16px; font-weight: 500;"><%= game.home_team_score %> - <%= game.away_team_score %></p>
        <% else %>
          <p style="margin: 0; padding: 0; font-size: 14px; font-weight: 500;"><%= game.date.strftime("%d/%m") %></p>
          <p style="margin: 0; padding: 0; font-size: 14px; font-weight: 500;"><%= game.date.strftime("%H:%M") %></p>
        <% end %>
      </div>

      <div class="align-self-center" style="width: 90px;">
        <%= image_tag(game.away_team.image_badge_url, style: 'width: 40px; display:block; margin: 0 auto;')  %>
      </div>

      <div class="align-self-center" style="width: calc(50% - 120px); text-align: left;">
        <p style="margin: 0; padding: 0;"><%= game.away_team.name %></p>
      </div>
    </div>
  <% end %>
</div>