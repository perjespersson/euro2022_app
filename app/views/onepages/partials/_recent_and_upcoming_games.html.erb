        </div>

        <div class="align-self-center" style="width: 90px;">
          <%= image_tag(@latest_game.away_team.image_badge_url, style: 'width: 40px; display:block; margin: 0 auto;')  %>
        </div>

        <div class="align-self-center" style="width: calc(50% - 120px); text-align: left;">
          <p style="margin: 0; padding: 0;"><%= @latest_game.away_team.name %></p>
        </div>
      </div>
    </div>
  </div>

